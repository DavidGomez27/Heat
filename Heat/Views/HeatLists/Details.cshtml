@model Heat.Models.HeatCoupleViewModel

<div>
    <h3>Heat List</h3>
    <hr />

    <dl class="dl-horizontal">

        <dd>
            @Html.DisplayNameFor(model => model.heatlist.Name)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.heatlist.Status)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.heatlist.Time)
        </dd>
        
    @* I just want to call on Couple.DanceType.Dance here in order to create a header for the detail look. *@

    
    </dl>
    <h3>Couples</h3>
    @foreach (var item in Model.couples)
    {
        <dl class="dl-horizontal">
            <dd>
                @Html.DisplayFor(model => item.Number)
            </dd>

            <dd>
                @Html.DisplayFor(model => item.Pro.Name)
            </dd>
            <dd>
                @Html.DisplayFor(model => item.Partner)
            </dd>
            <dd>
                @Html.DisplayFor(model => item.DanceLevel.DanceLevel1)
            </dd>
            <dd>
                @Html.DisplayFor(model => item.Combo.Combo1)
            </dd>
        </dl>
        <hr />
    }
</div>
